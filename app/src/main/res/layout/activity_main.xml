<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle_alojam">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#0f1c2f"
    android:title="Mi App" />


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:background="#f0f4f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logoprueba"
            android:contentDescription="Logo" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a LuminusCrea Booking"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#0f1c2f"/>

        <!-- Promoción principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encuentra alojamiento en playas de Yucatán"
            android:textSize="18sp"
            android:textColor="#0f1c2f"
            android:gravity="center"
            android:paddingTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservas fáciles, rápidas y seguras"
            android:gravity="center"
            android:textColor="#444"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/Alojamientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar alojamientos"
            android:layout_gravity="center"
            android:backgroundTint="#00b3ff"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_marginBottom="24dp"
            android:onClick="abrirExplorar" />

        <!-- Tarjetas de destinos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ListView
                android:id="@+id/ListaTipoAloj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="20dp"/>

            <!-- Cada destino se puede convertir en CardView o simplemente LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:radius="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso"
                        android:textStyle="bold"
                        android:textColor="#0f1c2f"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Malecón, comida local y vistas increíbles"
                        android:textColor="#666"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Puedes repetir bloques similares para Telchac y Sisal -->
        </LinearLayout>

        <!-- Footer / contacto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: soporte@luminuscreacode.com"
            android:textColor="#0f1c2f"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: +52 9991410909"
            android:textColor="#0f1c2f"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: Mérida, Yucatán, México"
            android:textColor="#0f1c2f"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>